---
import type { Photo } from "types/photo";
import { Image } from "@astrojs/image/components";

export type Props = {
  photo: Photo;
};

const { photo } = Astro.props as Props;
---

<figure class="c-figure" data-aos="fade-up">
  <Image
    src={photo.urls.full}
    alt={photo.description ?? photo.alt_description}
    width={305}
    height={400}
    aspectRatio={16 / 9}
    format="webp"
    loading="lazy"
  />
  <figcaption class="c-figure__caption">
    Photo by {" "}
    <a href={photo.user.links.html}
      >{photo.user.first_name + " " + photo.user.last_name}
    </a>
    {" "}on <a href={photo.links.html}>Unsplash</a>
  </figcaption>
</figure>

<style>
  .c-figure {
    display: none;
    position: relative;
    width: 13rem;
    height: 18rem;
    box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
  }
  .c-figure::before {
    content: "";
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: translate(15px, 15px);
    transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
    border-radius: 0.4rem;
    border: 6px solid #eceff4;
  }
  img {
    border-radius: 0.4rem;
    object-fit: cover;
  }
  .c-figure {
    width: 19rem;
    height: 20rem;
  }
  .c-figure__caption {
    position: absolute;
    left: -25px;
    right: 0;
    bottom: -7rem;
    height: fit-content;
    text-align: end;
    font-size: 0.8rem;
  }

  @media (min-width: 768px) {
    .c-figure {
      display: block;
    }
  }
  @media (min-width: 1024px) {
    .c-figure {
      width: 19rem;
      height: 25rem;
    }
    .c-figure__caption {
      bottom: -3rem;
    }
  }
</style>
