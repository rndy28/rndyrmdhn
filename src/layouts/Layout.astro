---
import "@fontsource/space-mono";
import "@fontsource/manjari";
import "../styles/main.css";
import metaTags from "libs/data/meta";
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="Y60QX0WsFBGoGn7vnSEdRZUMewKr4A8BSLlMAfl5W4k"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <SEO {...metaTags} />
  </head>
  <body
    class="scroll-smooth bg-white selection:text-white selection:bg-polarNight2 dark:bg-polarNight0 dark:selection:text-polarNight2 dark:selection:bg-snowStorm0"
  >
    <slot />
  </body>
</html>
